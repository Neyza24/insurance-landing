.feature-card {
  position: relative;
  overflow: hidden;
  border-radius: 1rem;
  transition: transform 0.3s ease;
}
.feature-card:hover {
  transform: scale(1.05);
}


.card {
  border-radius: 1rem;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  position: relative;
} 
.card:hover {
  box-shadow: 0 8px 30px rgba(0, 0, 0, 0.2);
}

.card-image {
  position: relative;
  overflow: hidden;
  border-radius: 1rem;
}
.card-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 1rem;
}





</style>
