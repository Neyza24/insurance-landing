---
import { Image } from "astro:assets";
import petCard from "../assets/walking-dog.png";
import travelCard from "../assets/nomad-travel.png";
import planEvoluciona from "../assets/plan-evolucion.png";
import planClasico from "../assets/plan-clasico.png";
import planViva from "../assets/plan-viva.png";
import planGlobal from "../assets/plan-global.png";

---

<!-- Interactive Feature Cards -->
<section
  id="servicios"
  class="section relative bg-shape"
>
  <div class="container-custom ">
    <div class="text-start md:text-center max-w-3xl mx-auto px-4 pb-5">
      <h2
